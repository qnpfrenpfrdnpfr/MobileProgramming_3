<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="370dp"
        android:layout_height="530dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calendarView"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:text="2022.10.10"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"

        android:layout_marginTop="25dp"
        android:layout_marginEnd="200dp"
        android:textStyle="bold"
        android:text="Today Date:"
        android:textColor="#4B0082"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/img2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/calendarView"
        android:layout_marginLeft="285dp"
        android:layout_toLeftOf="@+id/calendarView"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/calendarView"
        android:src="@drawable/img2" />

    <Button
        android:id="@+id/diaryadd"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/calendarView"
        android:layout_alignRight="@+id/calendarView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="210dp"
        android:layout_marginTop="-180dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#DDD3F8"
        android:textStyle="bold"
        android:text="새 일기 추가"

        />
    <Button
        android:id="@+id/diaryedit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/calendarView"
        android:layout_alignRight="@+id/calendarView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="210dp"
        android:layout_marginTop="-140dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#DDD3F8"
        android:textStyle="bold"
        android:text="저장 및 수정"

        />


</RelativeLayout>